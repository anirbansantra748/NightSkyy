<% layout("/layouts/boilerplate") %>

<body
  style="
    background-image: url('https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwallpapercave.com%2Fwp%2Fwp7879474.jpg&f=1&nofb=1&ipt=70b46783528c9d079a78d65659506ab5c8863214266bfc7325f6b9117f1a9a6d&ipo=images');
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
    color: #fff;
    font-family: 'Poppins', sans-serif;
  "
>
  <div class="container py-5 text-center">
    <!-- Page Title -->
    <h1 class="display-4 fw-bold mb-4">Star Information</h1>
    <p class="lead mb-5">Discover fascinating details about the star.</p>

    <!-- Star Details Card -->
    <div class="card bg-dark text-white shadow-lg mx-auto" style="max-width: 700px; border-radius: 20px;">
      <div class="card-body">
        <!-- Star Name -->
        <h2 class="card-title mb-4">Name: <%= star.name %></h2>
        <!-- Star Details List -->
        <ul class="list-group list-group-flush">
          <li class="list-group-item bg-dark text-white">
            <strong>Type:</strong> <%= star.type %>
          </li>
          <li class="list-group-item bg-dark text-white">
            <strong>Distance:</strong> <%= star.distance %>
          </li>
          <li class="list-group-item bg-dark text-white">
            <strong>Radius:</strong> <%= star.radius %>
          </li>
          <li class="list-group-item bg-dark text-white">
            <strong>Temperature:</strong> <%= star.temperature %>
          </li>
        </ul>
      </div>
    </div>

    <!-- Back to Search Button -->
    <div class="mt-5">
      <a href="/events" class="btn btn-gradient btn-lg px-5">back to Astro events</a>
    </div>
  </div>

  <!-- Custom Styling -->
  <style>
    .btn-gradient {
      background: linear-gradient(45deg, #007bff, #d63384);
      color: white;
      border: none;
      padding: 15px 30px;
      border-radius: 50px;
      transition: all 0.3s ease;
    }

    .btn-gradient:hover {
      background: linear-gradient(45deg, #0056b3, #b62272);
      transform: scale(1.1);
    }

    .card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
    }

    .list-group-item {
      border: none;
      font-size: 1.1rem;
    }

    .lead {
      font-size: 1.2rem;
      color: #ddd;
    }
  </style>
</body>
