<% layout("/layouts/boilerplate") %>
<head>
  <!-- Include Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Include FontAwesome for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(120deg, #1b2735, #090a0f); /* Night sky gradient */
      color: white;
      font-family: 'Roboto', sans-serif;
      margin: 0;
      padding: 0;
    }

    /* Navbar */
    .navbar {
      padding: 15px 20px;
    }

    .navbar-brand {
      font-size: 24px;
      color: #fff;
      font-weight: bold;
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .navbar .btn {
      background-color: #e84545;
      color: #fff;
      border: none;
    }

    .navbar .btn:hover {
      background-color: #d73737;
    }

    .navbar .btn:hover {
      background-color: #d73737;
    }

    /* Main Header */
    h1 {
      font-size: 48px;
      font-weight: bold;
      text-align: center;
      margin: 100px 0 30px;
      letter-spacing: 1.5px;
    }

    /* Search Bar */
    .search-bar {
      margin-bottom: 30px;
      text-align: center;
    }

    .search-bar input {
      width: 70%;
      padding: 10px;
      border: none;
      border-radius: 20px;
      outline: none;
    }

    .search-bar button {
      padding: 10px 20px;
      margin-left: 10px;
      border-radius: 20px;
      background-color: #e84545;
      color: #fff;
      border: none;
    }

    .search-bar button:hover {
      background-color: #d73737;
    }

    /* Card Container */
    .card-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      padding: 20px;
    }

    .astro-card {
      position: relative;
      overflow: hidden;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
      background: #1b2735;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .astro-card img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 15px;
    }

    .astro-card:hover {
      transform: scale(1.03);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.8);
    }

    .astro-card:hover .overlay {
      opacity: 1;
    }

    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .overlay .actions {
      color: white;
      text-align: center;
    }

    .overlay .actions i {
      font-size: 24px;
      margin: 10px;
      cursor: pointer;
      transition: color 0.3s;
    }

    .overlay .actions i:hover {
      color: #e84545;
    }

    /* Infinite Scroll Button */
    .load-more {
      text-align: center;
      margin: 30px 0;
    }

    .load-more button {
      padding: 10px 30px;
      border: none;
      border-radius: 20px;
      background-color: #e84545;
      color: #fff;
      font-size: 16px;
      cursor: pointer;
    }

    .load-more button:hover {
      background-color: #d73737;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <a class="navbar-brand" href="/">AstroGallery <i class="fa-solid fa-earth-europe"></i></a>
    <a class="btn" href="/new">Upload post <i class="fa-solid fa-meteor"></i></a>
  </nav>

  <h1>Explore the Cosmos <i class="fa-solid fa-user-astronaut"></i></h1>

  <!-- Search Bar -->
  <div class="search-bar">
    <form action="/searchPost" method="GET">
      <input type="text" name="query" placeholder="Search by title or description..." required />
      <button type="submit">Search <i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
  </div>

  <!-- Card Container -->
  <div class="container-fluid">
    <div class="card-container">
      <% for (let post of allPosts) { %>
        <div class="astro-card">
          <a href="view/<%= post._id %>">
            <img src="<%= post.image %>" alt="Astro Image" />
            <div class="overlay">
              <!-- <div class="actions">
                <i class="fa-regular fa-heart"></i>
                <i class="fa-solid fa-share-nodes"></i>
              </div> -->
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Load More Button
  <div class="load-more">
    <button onclick="loadMore()">Load More</button>
  </div>

  <script>
    function loadMore() {
      // Placeholder for loading more posts dynamically
      alert('Load more functionality coming soon!');
    }
  </script> -->
</body>
