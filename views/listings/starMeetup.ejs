<% layout("/layouts/boilerplate") %>

<body class="bg-dark text-light" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.9)), url('https://images.pexels.com/photos/924824/pexels-photo-924824.jpeg?auto=compress&cs=tinysrgb&w=600'); background-size: cover; background-attachment: fixed;">
  <div class="container py-5">
    <!-- Header Section -->
    <div class="row mb-5 align-items-center">
      <div class="col-md-8">
        <h1 class="display-4 text-primary mb-3" style="font-weight: 800; letter-spacing: -1px;">
          <i class="fas fa-meteor text-warning me-3"></i>Star Meetups
        </h1>
        <!-- <p class="lead text-muted" style="color:white">Discover and connect with cosmic events across the universe.</p> -->
      </div>
      <div class="col-md-4 text-end">
        <a href="/starMeetup-form" class="btn btn-lg btn-gradient shadow-lg transform-on-hover">
          <i class="fas fa-plus-circle me-2"></i>Create Meetup  .<i class="fa-solid fa-calendar-days"></i>
        </a>
      </div>
    </div>

    <!-- Advanced Search Bar -->
    <div class="search-container mb-5">
      <form action="/starMeetups/search" method="GET" class="search-form">
        <div class="input-group input-group-lg shadow-sm">
          <span class="input-group-text bg-gradient text-white border-0">
            <i class="fas fa-search"  style="color:#000000;"></i>
          </span>
          <input
            type="text"
            name="query"
            class="form-control bg-light text-dark"
            placeholder="Search events by name, location, or date"
            style="border: none; font-size: 1.2rem; padding: 0.75rem;">
          <button type="submit" class="btn btn-gradient px-4">
            Search <i class="fas fa-arrow-right ms-2"></i>
          </button>
        </div>

        <!-- Filters -->
        <div class="d-flex justify-content-between mt-3">
          <div>
            <button class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown">
              <i class="fas fa-filter me-2"></i>Filters
            </button>
            <ul class="dropdown-menu bg-dark border border-light shadow">
              <li><a class="dropdown-item text-light" href="#">Upcoming Events</a></li>
              <li><a class="dropdown-item text-light" href="#">Popular Events</a></li>
              <li><a class="dropdown-item text-light" href="#">Nearest Location</a></li>
            </ul>
          </div>
          <small class="text-muted"><%= meetups.length %> events found</small>
        </div>
      </form>
    </div>

   <!-- Meetup Cards -->
   <div class="row">
    <% meetups.forEach(meetup => { %>
      <div class="col-12 col-md-6 mb-4">
        <div class="card text-bg-dark meetup-card">
          <!-- Capacity Badge -->
          <div class="position-absolute top-0 end-0 p-2">
            <span class="badge bg-primary text-white">
              Capacity: <%= meetup.capacity %>
            </span>
          </div>
          <!-- Card Image -->
          <img src="https://static.vecteezy.com/system/resources/previews/013/717/499/non_2x/night-sky-above-clouds-with-full-moon-and-stars-free-vector.jpg" class="card-img img-fluid" alt="Night Sky">
          <!-- Card Content -->
          <div class="card-img-overlay d-flex flex-column justify-content-end" style="background: rgba(0, 0, 0, 0.6); border-radius: 10px;">
            <h5 class="card-title fs-5"><i class="fa fa-star"></i> <%= meetup.eventName %></h5>
            <p class="card-text fs-6"><i class="fa fa-map-marker-alt"></i> Location: <%= meetup.location %>, <%= meetup.city %></p>
            <p class="card-text fs-6"><i class="fa fa-calendar-alt"></i> Date: <%= meetup.date.toDateString() %></p>
            <div class="d-flex justify-content-between mt-3">
              <a href="/starMeetup/<%= meetup._id %>" class="btn btn-outline-light btn-sm">View Details</a>
              <div class="text-light fs-6">
                <i class="fa fa-envelope"></i> <%= meetup.contactEmail %>
                <i class="fa fa-phone ml-3"></i> <%= meetup.contactNumber %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Custom Styling -->
<style>
  @media (max-width: 768px) {
    .search-form {
      padding: 15px;
    }
    .card-title {
      font-size: 1.2rem;
    }
    .card-text {
      font-size: 1rem;
    }
    .btn {
      font-size: 0.9rem;
      padding: 8px 12px;
    }
  }

  .card {
    border: none;
    overflow: hidden;
    border-radius: 10px;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: scale(1.05);
  }

  .card-title, .card-text {
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
  }

  .btn-outline-light {
    border-color: #fff;
    color: #fff;
  }

  .btn-outline-light:hover {
    background-color: #007bff;
    color: #fff;
  }

  .btn-gradient {
    background: linear-gradient(45deg, #007bff, #00c6ff);
    border: none;
    color: white;
  }

  .btn-gradient:hover {
    background: linear-gradient(45deg, #0056b3, #0090c1);
    transform: scale(1.05);
  }

  .badge {
    font-weight: 600;
  }
</style>

<!-- Font Awesome & Bootstrap JS -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
