<% layout("/layouts/boilerplate") %>
<body style="background-image: url('https://images.pexels.com/photos/924824/pexels-photo-924824.jpeg?auto=compress&cs=tinysrgb&w=600https://scontent.fccu14-1.fna.fbcdn.net/v/t39.30808-6/451745723_1024320352612192_2649783107366186335_n.jpg?_nc_cat=105&ccb=1-7&_nc_sid=127cfc&_nc_ohc=zdOdMbU1hU8Q7kNvgGroBp9&_nc_ht=scontent.fccu14-1.fna&oh=00_AYCOI9FtNsNcqbCcV5zwYFuNLAb58CXFEHsDtYS3eStKDA&oe=669E0C11'); background-size: cover;">
    <div class="container">
        <h1 class="text-center my-4" style="color:white;">NASA Picture of the Day</h1>
        <div class="card pod-card">
            <div class="row g-0">
                <!-- Adjusting column to allow full image display -->
                <div class="col-md-4">
                    <!-- Set the image to cover the entire area -->
                    <img src="<%= pod.url %>" class="img-fluid rounded-start h-100" alt="pod image" style="object-fit: cover; width: 100%; height: 100%;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= pod.title %></h5>
                        <p class="card-text"><%= pod.explanation %></p>
                        <p class="card-text"><small class="text-muted">Date: <%= pod.date %></small></p>
                        <a href="/astrogallery" class="btn btn-dark">Back to Gallery</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
