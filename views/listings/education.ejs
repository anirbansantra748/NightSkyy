<% layout('/layouts/boilerplate') %>

<body style="background-color: #121212; color: #f1f1f1; font-family: Arial, sans-serif; padding: 20px;">
    <h1>Educational Videos</h1>

    <% if (error) { %>
        <p style="color: #ff6347;"><%= error %></p>
    <% } %>

    <% if (videos && videos.length) { %>
        <div class="video-grid">
            <% videos.forEach(video => { %>
                <div class="video-card">
                    <a href="https://www.youtube.com/watch?v=<%= video.id.videoId %>" target="_blank">
                        <img
                            src="<%= video.snippet.thumbnails.medium.url %>"
                            alt="<%= video.snippet.title %>"
                            style="width: 100%; border-radius: 8px;">
                    </a>
                    <h3 style="color: #fff;"><%= video.snippet.title %></h3>
                    <p style="color: #ccc;"><%= video.snippet.description %></p>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p style="color: #ccc;">No videos to display at the moment. Please try again later!</p>
    <% } %>

    <!-- Sell Your Content Section -->
   <!-- Sell Your Content Section -->
<div class="sell-content-section">
    <h2>Want to Sell Your Educational Content?</h2>
    <p>Are you a content creator or course instructor with expertise in astronomy, space science, or education?
       Share your knowledge with our growing audience!</p>

    <!-- Contact Us Button -->
    <a href="mailto:anirbansantra748@gmail.com?subject=Inquiry%20about%20selling%20educational%20content&body=Hi,%0D%0A%0D%0AI would like to share my educational content on NightSky.%0D%0A%0D%0APlease provide me with more details.%0D%0A%0D%0AThank you!"
       class="contact-btn"
       style="text-decoration: none;">
        Contact Us
    </a>
</div>

</body>

<style>
    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .video-card {
        background-color: #1e1e1e;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
    }

    a {
        text-decoration: none;
    }

    .sell-content-section {
        margin-top: 50px;
        padding: 20px;
        background-color: #1f2937;
        border-radius: 10px;
        text-align: center;
    }

    .sell-content-section h2 {
        color: #ffce45;
        font-size: 1.8em;
        margin-bottom: 10px;
    }

    .sell-content-section p {
        color: #f1f1f1;
        font-size: 1em;
        margin-bottom: 20px;
    }

    .contact-btn, .send-btn {
        background-color: #ffce45;
        color: #121212;
        border: none;
        padding: 10px 20px;
        font-size: 1em;
        border-radius: 5px;
        cursor: pointer;
    }

    .contact-btn:hover, .send-btn:hover {
        background-color: #ffa726;
    }

    form input, form textarea {
        background-color: #2c2c2c;
        color: #fff;
        border: 1px solid #444;
        border-radius: 5px;
    }
</style>

<script>
    function showContactForm() {
        const form = document.getElementById('contact-form');
        form.style.display = form.style.display === 'none' ? 'block' : 'none';
    }
</script>
